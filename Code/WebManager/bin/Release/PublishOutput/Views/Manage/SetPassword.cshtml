@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set Password";
    string code = ViewData["Code"] as string;
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}
<div class="page-header">
    <h1>
        Cập nhật mật khẩu
    </h1>
</div>
<div class="alert alert-block alert-warning">
    <p>* Thí sinh vui lòng cập nhật mật khẩu đây đủ. Đây sẽ là thông tin đăng nhập tài khoản của bạn</p>
</div>
<style>
    .control-label {
        font-weight: bold;
    }
</style>
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">Thông tin đầy đủ</h4>
    </div>
    <div class="panel-body">
        <form asp-controller="Manage" asp-action="SetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h4>Set your password</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input name="code" type="hidden" value="@code" />
            <div class="form-group">
                <label asp-for="NewPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Set password</button>
                </div>
            </div>
        </form>
    </div>
</div>
        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }
